@model IEnumerable<Decibel.Models.Komentar>

@if (!Model.Any())
{
    <p>Još nema komentara. Budi prvi koji će komentarisati!</p>
}
else
{
    <ul class="list-group">
        @foreach (var komentar in Model)
        {
            <li class="list-group-item">
                <strong>@komentar.Korisnik?.ime:</strong> @komentar.tekst <br />
                <small>@komentar.kreiranDatumVrijeme?.ToString("dd.MM.yyyy HH:mm") ?? "Nepoznato vreme"</small>
            </li>
        }
    </ul>
}
