@model Decibel.ViewModels.PjesmaViewModel;

<div class="izvodjaci-container">
    @foreach (var izvodjac in Model.Izvodjaci)
    {
        <a class="ajax-link" href="/Korisnik/Details/@(izvodjac.ID)"><img class="izvodjac-profilna-slika" src="@izvodjac.putanjaProfilneSlike"><strong>@izvodjac.korisnickoIme</strong></a>
    }
</div>

<style>

    
    .pjesma-detalji {
        display: flex;
        justify-content: center;
    }

    .pjesma-cover-slika-div p {
        width: 400px;
    }

    .pjesma-detalji a {
        color: rgb(205, 205, 205);
        text-decoration: none;
    }

        .pjesma-detalji a:hover {
            text-decoration: underline;
        }

    .pjesma-cover-slika-div {
        max-width: 400px;
    }

    .izvodjac-profilna-slika {
        width: 50px;
        height: 50px;
        border-radius: 25px;
        border-style: solid;
        border-width: 1px;
        border-color: rgb(82, 82, 82);
        background: black;
        object-fit: cover;
        margin-right: 10px;
    }

    .izvodjaci-container {
        display: flex;
        flex-direction: column;
        gap: 10px;
    }

</style>
