<div id="genre-pie"></div>

<script type="module">
    (function() {

    const data = [
            { genre: "Pop", value: 40 },
            { genre: "Rock", value: 25 },
            { genre: "Hip-Hop", value: 20 },
            { genre: "Jazz", value: 10 },
            { genre: "Classical", value: 5 },
        ];

        const width = 400, height = 400, margin = 40;
        const radius = Math.min(width, height) / 2 - margin;

        const svg = d3.select("#genre-pie")
            .append("svg")
            .attr("width", width)
            .attr("height", height)
            .append("g")
            .attr("transform", `translate(${width / 2}, ${height / 2})`);

        const color = d3.scaleOrdinal()
            .domain(data.map(d => d.genre))
            .range(d3.schemeCategory10);

        const pie = d3.pie()
            .value(d => d.value);

        const data_ready = pie(data);

        svg.selectAll('path')
            .data(data_ready)
            .join('path')
            .attr('d', d3.arc()
                .innerRadius(0)
                .outerRadius(radius)
            )
            .attr('fill', d => color(d.data.genre))
            .attr("stroke", "white")
            .style("stroke-width", "2px")
            .style("opacity", 0.7);

        svg.selectAll('text')
            .data(data_ready)
            .join('text')
            .text(d => d.data.genre)
            .attr("transform", d => `translate(${d3.arc().innerRadius(0).outerRadius(radius).centroid(d)})`)
            .style("text-anchor", "middle")
            .style("font-size", 12);
    })();
</script>
