@model IEnumerable<Decibel.Models.Pretplata>

@{
    ViewData["Title"] = "Pretplate";
}

<h1 class="text-center mb-4 mt-4">Pretplate</h1>

<div class="d-flex justify-content-end mb-3">
    <a class="btn btn-primary" asp-action="Create">Dodaj novu pretplatu</a>
</div>

<div class="table-responsive">
    <table class="table table-bordered text-center ">
        <thead class="table-dark">
            <tr>
                <th>@Html.DisplayNameFor(model => model.naziv)</th>
                <th>@Html.DisplayNameFor(model => model.opis)</th>
                <th>@Html.DisplayNameFor(model => model.cijena)</th>
                <th>@Html.DisplayNameFor(model => model.dostupno)</th>
                <th>@Html.DisplayNameFor(model => model.kreiranDatumVrijeme)</th>
                <th>Akcije</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr class="clickable-row" data-href="@Url.Action("Details", new { id = item.ID })">
                    <td class="align-middle">@Html.DisplayFor(modelItem => item.naziv)</td>
                    <td class="align-middle">@Html.DisplayFor(modelItem => item.opis)</td>
                    <td class="align-middle">@Html.DisplayFor(modelItem => item.cijena) KM</td>
                    <td class="align-middle">@(item.dostupno ? "Da" : "Ne")</td>
                    <td class="align-middle">@item.kreiranDatumVrijeme.ToString("dd.MM.yyyy")</td>
                    <td class="align-middle">
                        <a class="btn btn-warning btn-sm" asp-action="Edit" asp-route-id="@item.ID">Edit</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

<script>
    document.addEventListener("DOMContentLoaded", function () {
        document.querySelectorAll(".clickable-row").forEach(row => {
            row.style.cursor = "pointer";
            row.addEventListener("click", function () {
                window.location = this.dataset.href;
            });
        });
    });
</script>
